<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/on"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".sign_up">

    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/text_selection_background"
        android:ems="10"
        android:hint="Frisked"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="13dp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/text_selection_background"
        android:ems="10"
        android:hint="San Roque Quezon City, Metro Manila"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_below="@id/username"
        android:textSize="13dp" />

    <EditText
        android:id="@+id/contact_number"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/text_selection_background"
        android:ems="10"
        android:hint="09215592132"
        android:inputType="number"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_below="@id/address"
        android:textSize="13dp"
        android:maxLength="11"/>

    <TextView
        android:id="@+id/viewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/username"
        android:text="Username"
        android:layout_above="@id/address"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/viewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/username"
        android:text="Address"
        android:layout_below="@id/username"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/viewContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/username"
        android:text="Contact Number"
        android:layout_below="@id/address"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/get_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/next_button_background"
        android:text="Sign Up"
        android:textColor="@color/text_sign_up_pressed" />


</RelativeLayout>
