<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Planner"
    android:background="@color/black">



    <TextView
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Profile"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textAlignment="center"
        />


    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/oval"
        android:paddingTop="20dp"
        android:text="T"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Edit"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@id/title2"
        android:layout_marginTop="10dp"
        />




    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="330dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/barrier"
        android:layout_below="@id/title3"
        android:padding="20dp">

        <TextView
            android:id="@+id/title4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Username:"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/title5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Contact Number:"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_below="@id/title4"
            />

        <TextView
            android:id="@+id/title6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Address:"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_below="@id/title5"
            />
        <TextView
            android:id="@+id/title7"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Email:"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_below="@id/title6"
            />

    </RelativeLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/test_line"
        app:itemIconTint="@drawable/icon_tint"
        app:itemTextColor="@drawable/icon_tint"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/items" />

</RelativeLayout>