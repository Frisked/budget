<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".profile">


    <TextView
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/title2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:shapeAppearance="@style/profile_circle"
        app:srcCompat="@drawable/baseline_add_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/title1"
        android:background="@color/white"

        />




    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/title2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Edit"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="330dp"
        android:layout_below="@id/title3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/barrier"
        android:padding="20dp">

        <TextView
            android:id="@+id/title4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Username:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/title5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/title4"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Contact Number:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/title6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/title5"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Address:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/title7"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/title6"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Email:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/navigation"
        android:background="#353550" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/Transparent"
        app:itemIconTint="@drawable/icon_tint"
        app:itemTextColor="@drawable/icon_tint"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/items" />

</RelativeLayout>